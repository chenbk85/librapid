<?xml version="1.0" encoding="utf8"?>
<HttpServer>
	<Server>
		<Set name="NumaNode">1</Set>
		<Set name="Port">9999</Set>
		<Set name="BufferSize">16KB</Set>
		<Set name="InitialUserConnection">1000</Set>
		<Set name="MaxUserConnection">25000</Set>
	</Server>
	
	<Http>
		<Set name="Host">127.0.0.1:9999</Set>
		<Set name="ServerName">RapidHttpd</Set>
		<Set name="EnableSSL">false</Set>
		<Set name="EnableHTTP2">false</Set>
